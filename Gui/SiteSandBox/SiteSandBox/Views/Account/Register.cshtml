@model SiteSandBox.Models.RegisterModel
@{
    ViewBag.Title = "S'inscrire";
}
@section SideBar {
    @Html.Partial("_SideBarPartial")
}
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Créez un nouveau compte.</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="well">
        <div class="form-group">
            <div class="input-group  col-sm-8 col-sm-offset-1">
                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "UserName" })
            </div>
        </div>
        <div class="form-group">
            <div class="input-group col-sm-8 col-sm-offset-1">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-envelope"></span>
                </span>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Adress" })
            </div>
        </div>
        <div class="form-group">
            <div class="input-group col-sm-8 col-sm-offset-1">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                @Html.PasswordFor(m => m.Password, new { @type = "password", @class = "form-control", @placeholder = "Password" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @type = "password", @class = "form-control", @placeholder = "Confirm Password" })
            </div>
        </div>
        <div>
            <input type="submit" value="S'inscrire" class="btn btn-success" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
