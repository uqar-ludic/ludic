@if (Request.IsAuthenticated) {
  <text>
    Bonjour, @Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Gérer" })!
    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
      @Html.AntiForgeryToken()
      <a href="javascript:document.getElementById('logoutForm').submit()" class="logout">Se déconnecter</a>
    }
  </text>
} else {
  <ul class="nav pull-right top-menu">
    <li>@Html.ActionLink("S'inscrire", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "logout"})</li>
    <li>@Html.ActionLink("Se connecter", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "logout" })</li>
  </ul>
}
