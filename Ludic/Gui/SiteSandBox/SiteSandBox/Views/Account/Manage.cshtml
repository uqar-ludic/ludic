@model SiteSandBox.Models.LocalModel
@{
    ViewBag.Title = "Gérer le compte";
}
@section SideBar {
    @Html.Partial("_SideBarPartial")
}
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
@if (@ViewBag.StatusMessage != null)
{
    <p class="alert alert-success"><a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>[@ViewBag.StatusMessage]</p>
}

<p>Vous êtes connecté en tant que <strong>@User.Identity.Name</strong>.</p>

@Html.Partial("_ChangeEmailPartial")

@if (ViewBag.HasLocalPassword)
{
    @Html.Partial("_ChangePasswordPartial")
}
else
{
    @Html.Partial("_SetPasswordPartial")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
