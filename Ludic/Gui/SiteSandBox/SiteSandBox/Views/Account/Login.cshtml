@model SiteSandBox.Models.LoginModel

@{
    ViewBag.Title = "Se connecter";
}
@section SideBar {
    @Html.Partial("_SideBarPartial")
}
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<section id="loginForm">
    <h2>Utilisez un compte local pour vous connecter.</h2>
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="form-horizontal well" role="form">
            <div class="form-group">
                <div class="input-group col-sm-8 col-sm-offset-1">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "UserName" })
                </div>
            </div>
            <div class="form-group">
                <div class="input-group  col-sm-8 col-sm-offset-1">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-8", @placeholder = "Password" })
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox col-sm-8 col-sm-offset-1">
                    @Html.CheckBoxFor(m => m.RememberMe) Remember me
                </div>
            </div>
            <input type="submit" value="Se connecter" class="btn btn-success" />
            @Html.ActionLink("S'inscrire", "Register") si vous n’avez pas de compte.
        </div>
    }
</section>

