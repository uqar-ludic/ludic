<!DOCTYPE html>
<html lang="fr">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - SandBox</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
<body style="background-color: gray">
    <div class="container">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" id="navMaster">
            <div class="navbar-header" id="logMaster">
                @Html.ActionLink("SandBox", "Index", "Home", null, new { @class = "navbar-brand", @style = "font-weight:bold;" })
            </div>
            @*<ul class="nav navbar-nav navbar-right">
                @Html.Partial("_LoginPartial")
            </ul>*@
        </nav>
        <div class="row" id="body" style="margin-top: 55px">
            <div class="col-lg-2 well" style="margin: 0px 1px 0px -1px">
                @RenderSection("SideBar", required: false)
            </div>
            <div class="col-lg-10 well" style="margin: 0px -1px 0px 1px">
                    @RenderBody()
            </div>
        </div>
        <div>
            <div class="content-wrapper col-lg-12">
                <div class="navbar-fixed-bottom navbar-inverse text-center">
                    <a href="@Url.Action("Index", "Home")"><i class="glyphicon glyphicon-user"></i><b> Admin </b></a>
                    | <a href="@Url.Action("Index", "Home")"><i class="glyphicon glyphicon-calendar"></i> <b id="date">@DateTime.Now</b></a>
                    | <a href="@Url.Action("About", "Home")"><i class="glyphicon glyphicon-question-sign"></i><b> À propos de </b></a>
                    | <a href="@Url.Action("Contact", "Home")"><i class="glyphicon glyphicon-envelope"></i><b> Contact </b></a>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Date")
    @RenderSection("scripts", required: false)
</body>
</html>
